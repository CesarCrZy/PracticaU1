<%include _header%>

    <h1>Register a new song Hot</h1>

    <form action="/ReSongs" method="post">
        <div class="form-group">
            <input name="nameArtist" type="text" class="form-control" placeholder="Name of the artist" required autofocus/>
        </div>
        <div class="form-group">
            <input name="song" type="text" class="form-control" placeholder="Name of the song" required autofocus/>
        </div>
        <div class="form-group">
            <input type="date" name="fecha" id="" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="link" placeholder="Link from Youtube" required autofocus>
        </div>
        <input type="submit" value="Register the Song" class="btn btn-primary btn-block" />
    </form>

    <%include _footer%>